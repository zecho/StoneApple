<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
    xmlns:content="http://purl.org/rss/1.0/modules/content/"
    xmlns:wfw="http://wellformedweb.org/CommentAPI/"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
    >

<channel>
    <title>Stone Apple</title>
    <atom:link href="{{ url('feed') }}" rel="self" type="application/rss+xml" />
    <link>{{ url('homepage') }}</link>
    <description>Blogging powered by awesome.</description>
    <lastBuildDate>Tue, 13 Aug 2013 22:12:23 +0000</lastBuildDate>
    <language>en-US</language>
    <sy:updatePeriod>daily</sy:updatePeriod>
    <sy:updateFrequency>1</sy:updateFrequency>
{% for post in posts %}
    <item>
        <title>{{ post.title }}</title>
        <link>{{ url('post', {'slug': post.slug}) }}</link>
        <pubDate>Tue, 13 Aug 2013 22:12:23 +0000</pubDate>
        <dc:creator>lisje</dc:creator>
        <description><![CDATA[{{ post.body|raw }}]]></description>
        <content:encoded><![CDATA[{{ post.body|raw }}]]></content:encoded>
    </item>
{% endfor %}
</channel>

